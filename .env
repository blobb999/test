# KI Self Sustain Environment Configuration

# Application Settings
APP_NAME=KI_Self_Sustain
APP_VERSION=1.0.0
ENVIRONMENT=production

# Backend Configuration
BACKEND_PORT=5000
BACKEND_HOST=0.0.0.0
FLASK_ENV=production
SECRET_KEY=ki_self_sustain_secret_key_2024

# Frontend Configuration
FRONTEND_PORT=80

# Flowise Configuration
FLOWISE_PORT=3000
FLOWISE_USERNAME=admin
FLOWISE_PASSWORD=ki_self_sustain_2024
FLOWISE_API_URL=http://flowise:3000

# LLM Configuration
LLM_PORT=11434
LLM_API_URL=http://llm_service:11434
LLM_AVAILABLE=true
LLM_MODEL=llama3

# Database Configuration
DATABASE_URL=sqlite:///app/data/ki_self_sustain.db

# Redis Configuration
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=ki_self_sustain_2024

# Security Configuration
ENABLE_SAFETY_CHECKS=true
MAX_EXECUTION_TIME=300
MAX_MEMORY_USAGE=104857600
ALERT_THRESHOLD=0.8
MONITORING_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_PATH=/app/logs

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=3600
BACKUP_PATH=/app/backups

# Self-Learning Configuration
LEARNING_ENABLED=true
MAX_IMPROVEMENTS_PER_HOUR=5
AUTONOMOUS_IMPROVEMENT=true

# Docker Configuration
COMPOSE_PROJECT_NAME=ki_self_sustain
COMPOSE_FILE=docker-compose.yaml

